{
  "name": "markup-basic-template",
  "version": "0.1.0",
  "description": "Basic template for HTML/CSS/JS pages markup.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owlrik/markup-basic-template.git"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"src/sass/**/*.scss\" --syntax scss",
    "eslint": "eslint src/**/*.js",
    "test": "npm run editorconfig && npm run stylelint && npm run eslint",
    "build": "cross-env NODE_ENV=production gulp build && gulp imagemin",
    "start": "cross-env NODE_ENV=development gulp start",
    "webp": "gulp webp",
    "avif": "gulp avif",
    "imagemin": "gulp imagemin",
    "deploy": "gulp deploy"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "src/html/**/*.html",
    "src/sass/**/*.{sass,scss}",
    "src/js/**/*.js",
    "src/img/**/*.svg"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.27.4",
    "cross-env": "^7.0.2",
    "del": "^6.0.0",
    "eslint": "^7.31.0",
    "gh-pages": "^3.2.3",
    "gulp": "^4.0.2",
    "gulp-avif": "^1.0.1",
    "gulp-changed": "^4.0.3",
    "gulp-csso": "^4.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.1",
    "gulp-svgstore": "^7.0.1",
    "gulp-webp": "^4.0.1",
    "husky": "^4.3.8",
    "stylelint": "^13.13.1",
    "stylelint-config-htmlacademy": "^0.1.10",
    "webpack": "^5.45.1",
    "webpack-stream": "^6.1.2"
  },
  "dependencies": {},
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not IE <= 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
